package com.codewithshah;


import java.util.Arrays;

public class second {
       public static int kthelement(int[] arr , int k)
       {
           Arrays.sort(arr);

           return arr[k-1];
       }
    public static void main(String[] args) {
       int  arr[] = new int[] {12,3,5,7,19, -56};
       int k=2;
       System.out.print("The K-smallest element in the Unsorted array is  "+kthelement(arr, k ));

    }
}
